-- TABLA DE DEPARTAMENTO 

DROP TABLE IF EXISTS `Departamento`;
create table `Departamento` (
`IDdepartamento` smallint(5) not null primary key,
`nombre` varchar(10) default null
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

/*Después de haber creado la tabla, insertaremos los datos necesarios*/
INSERT INTO `Departamento`
VALUES (1111, "Financiero"), 
(2222, "Recursos Humanos"), 
(3333, "Marketing"), 
(4444, "Comercial"), 
(5555, "Compras"), 
(6666, "Logística y Control de Gestión"), 
(7777, "Atención al cliente");

-- TABLA TRANSPORTE

DROP TABLE IF EXISTS `Transporte`;
create table `Transporte` (
`matricula` varchar(10) not null primary key,
`marca` varchar(20) default null,
`nombre` varchar(20) default null
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

/*Después de haber creado la tabla, insertaremos los datos necesarios*/
INSERT INTO `Transporte`
